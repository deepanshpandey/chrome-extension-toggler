{
  "manifest_version": 3,
  "name": "Extension Toggle Switch",
  "description": "One-click ON/OFF toggle for any specific extension (select from Options). No popup.",
  "version": "1.0.0",
  "permissions": [
    "management",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
    "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Toggle the target extension",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}